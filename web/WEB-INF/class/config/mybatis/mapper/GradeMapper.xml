<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springmvc.dao.GradeDao">

    <resultMap id="BaseResultMap" type="com.springmvc.entity.Grade">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="remark" property="remark" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="grade_list">
        id,name,remark
    </sql>

    <select id="findGradeAll" resultMap="BaseResultMap">
        select
        <include refid="grade_list"/>
        from grade
    </select>

    <select id="getTotal" resultType="Integer" parameterType="Map">
        select count(id)
        from grade
        <where>
            <if test="name != null and name != ''">
                name like concat('%',#{name},'%')
            </if>
        </where>
    </select>

    <select id="getGradeList" resultMap="BaseResultMap" parameterType="Map">
        select
        <include refid="grade_list"/>
        from grade
        <where>
            <if test="name != null and name != ''">
                name like concat('%',#{name},'%')
            </if>
        </where>
        limit #{offset}, #{pageSize}
    </select>

    <update id="edit" parameterType="com.springmvc.entity.Grade">
        update grade
        set name = #{name}, remark = #{remark}
        where id = #{id}
    </update>

    <update id="deleteGradeById">
        delete from grade
        where id in
        <foreach collection="ids" open="(" close=");" item="id" separator=",">
            #{id}
        </foreach>
    </update>

    <update id="addGrade" parameterType="com.springmvc.entity.Grade">
        insert into grade(id, name, remark)
        value (null,#{name},#{remark})
    </update>
</mapper>