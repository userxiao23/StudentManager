<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springmvc.dao.UserDao">

    <resultMap id="BaseResultMap" type="com.springmvc.entity.User">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="user_list">
        id,username,password
    </sql>

    <select id="findUser" resultMap="BaseResultMap">
        select
        <include refid="user_list"/>
        from user
        where username = #{username}
    </select>
    
    <select id="getTotal" resultType="Integer" parameterType="Map">
        select count(id)
        from user
        <where>
            <if test="username != null and username != ''">
                username like concat('%',#{username},'%')
            </if>
        </where>
    </select>

    <select id="getUserList" resultMap="BaseResultMap" parameterType="Map">
        select
        <include refid="user_list"/>
        from user
        <where>
            <if test="username != null and username != ''">
                username like concat('%',#{username},'%')
            </if>
        </where>
        order by id
        limit #{offset}, #{pageSize}
    </select>

    <update id="edit" parameterType="com.springmvc.entity.User">
        update user
        set username = #{username}, password = #{password}
        where id = #{id}
    </update>

    <update id="deleteUserById">
        delete from user
        where id in
        <foreach collection="ids" open="(" close=");" item="id" separator=",">
            #{id}
        </foreach>
    </update>

    <update id="addUser" parameterType="com.springmvc.entity.User">
        insert into user(id, username, password)
        value (null,#{username},#{password})
    </update>
</mapper>